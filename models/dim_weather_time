{{ config(materialized='table') }}

SELECT 
    ROW_NUMBER() OVER () AS WeatherTimeID,
    day_of_week, month_number, month_name
FROM (
    SELECT day_of_week FROM deteamproject.TLC_dataset.weather_july
    UNION ALL 
    SELECT day_of_week FROM deteamproject.TLC_dataset.weather_august 
    UNION ALL
    SELECT day_of_week FROM deteamproject.TLC_dataset.weather_september
    UNION ALL
    SELECT day_of_week FROM deteamproject.TLC_dataset.weather_october
    UNION ALL
    SELECT day_of_week FROM deteamproject.TLC_dataset.weather_november
    UNION ALL
    SELECT day_of_week FROM deteamproject.TLC_dataset.weather_december
) AS combined_WeatherTimes
